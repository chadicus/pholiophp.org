    "extra": {
        "heroku": {
            "newrelic": true,
            "php-config": [
                "date.timezone=America/New_York",
                "always_populate_raw_post_data=-1"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": "^7.0",
        "ext-xsl": "*",
        "slim/slim": "^3.0",
        "dominionenterprises/filter": "^2.0",
        "dominionenterprises/util": "^2.0",
        "slim/twig-view": "^2.1",
        "zendframework/zend-diactoros": "^1.3",
        "mongodb/mongodb": "^1.1"
    },
    "autoload": {
        "psr-4":{"Pholio\\" : "src"}
    },
    "autoload-dev": {
        "psr-4":{"Pholio\\" : "tests"}
    },
    "require-dev": {
        "chadicus/coding-standard": "^1.2"
    }
}
